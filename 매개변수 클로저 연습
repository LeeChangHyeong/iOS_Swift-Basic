import UIKit

// () -> Void 반환형이 없다. 이벤트만 알려줌
func completion(){
    
}


// 클로저 자체는 메소드
// sayHi라는 메소드가 매개변수를 가지는데 그거 자체가 클로저
// completion 이라는 클로저를 매개변수로 가지는
// 메소드 정의
func sayHi(completion: () -> Void){
    print("sayHi() called")
    sleep(2) // 2초 잠깐 멈추기
    // completion이라는 클로저 실행
    completion()
}

// 메소드 호출부에서 이벤트 종료를 알 수 있다.
sayHi(completion: {
    print("2초가 지났다. 1")
})

sayHi(){
    print("2초가 지났다. 2")
}

sayHi{
    print("2초가 지났다. 3")
}
// (String) -> Void
// userInput이라는 String을 받지만 반환형이 없음
func completion(userInput: String){
    
}


// 매개변수로서 데이터를 반환하는 클로저
func sayHiWithName(completion: (String) -> Void){
    print("sayHiWithName() called")
    sleep(2)
    // 클로저를 실행과 동시에 데이터를 반환
    completion("오늘도 빡코딩 하고 계신가요?!")
}

sayHiWithName(completion: { (comment: String) in
    print("2초 뒤에 그가 말했다! comment: ", comment)

})

sayHiWithName(completion : { comment in
    print("2초 뒤에 그가 말했다! comment: ", comment)
})

sayHiWithName{ comment in
    print("2초 뒤에 그가 말했다! comment: ", comment)
}

sayHiWithName{
    print("2초 뒤에 그가 말했다! comment: ", $0)
}

// (String, String) -> Void
func completion(first: String, second: String){
    
}



// 매개변수로서 데이터를 반환하는 클로저
func sayHiWithFullName(completion: (String, String) -> Void){
    print("sayHiWithFullName() called")
    sleep(2)
    // 클로저를 실행과 동시에 데이터를 반환
    completion("빡코딩", "으아아아")
}

// _는 생략의 의미
sayHiWithFullName{ _, second in
    print("두번째: \(second)")
}

// $0 은 첫번째 들어오는 것 쭉쭉 나아간다 e) $0, $1, $2
sayHiWithFullName{
    print("첫번째: \($0), 두번째: \($1)")
}

// ? 옵셔널 값이 있을 수도 있고 없을 수도 있다
// nil은 없다는 뜻
// 옵셔널을 쓰면 값을 넣을 수도 있고 안 넣을 수도 있어서 유동적으로 사용가능
func sayHiOptional(completion: (() -> Void)? = nil){
    print("sayHi() called")
    sleep(2) // 2초 잠깐 멈추기
    // completion이라는 클로저 실행
    completion?()
}

sayHiOptional {
    
}

sayHiOptional()

sayHiOptional(completion: {
    print("2초가 지났다. !!")
})


// (Int) -> String
func transform(number: Int) -> String {
    return "숫자: \(number)"
}

var myNumbers : [Int] = [0, 1, 2 ,3 ,4, 5]

var transformedNumbers = myNumbers.map { aNumber in
    return "숫자: \(aNumber)"
}

